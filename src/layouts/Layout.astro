---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="../../favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <!-- // TODO: add astro seo -->
    <script src="../lib/dropdown.js"></script>

    <!-- paper cups-->
    <script>
      window.Papercups = {
        config: {
          accountId: '106cbf51-9ce1-4b68-bd87-ee9693d76983',
          title: 'Welcome to Kasey Home Loans',
          subtitle: 'Ask us anything in the chat window below ðŸ˜Š',
          primaryColor: '#1890ff',
          greeting: '',
          newMessagePlaceholder: 'Start typing...',
          showAgentAvailability: true,
          baseUrl: 'https://papercups.khl.zone',
        },
      };
    </script>
    <script is:inline type="text/javascript" async defer src="https://app.papercups.io/widget.js"></script>
    <!-- smooth scrolling -->
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const links = document.querySelectorAll('a[href^="#"]');
        links.forEach((link) => {
          link.addEventListener('click', smoothScroll);
        });

        function smoothScroll(ev: Event) {
          ev.preventDefault();
          const targetId = this.getAttribute('href').substring(1);
          const targetElement = document.getElementById(targetId);
          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
            });
          }
        }
      });
    </script>
  </head>
  <body>
    <Navbar />
    <Breadcrumbs />
    <main id="main">
      <slot />
    </main>
    <Footer />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
