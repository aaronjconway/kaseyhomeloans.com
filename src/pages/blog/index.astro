---
import Pagination from '@/components/Pagination.astro';
import PostPreview from '@/components/PostPreview.astro';
import TopPosts from '@/components/TopPosts.astro';
import Layout from '@/layouts/Layout.astro';

import PostSidebar from '@/components/PostSidebar.astro';

import { getCollection } from 'astro:content';
const posts = await getCollection('blog');

const topPosts = posts.slice(0, 4);
---

<Layout title={'Blog'} image={''} description={'the khl blog'}>
  <style lang="scss">
    .blog-wrapper {
      display: grid;
      grid-template-columns: 2fr 1fr;
      width: 100%;
    }

    .side-bar {
      display: flex;
      flex-direction: col;
      position: fixed;
      background: red;
      border: 1px solid blue;
    }
  </style>

  <!-- <PageHeader title={postIndex.data.title} /> -->
  <section class="section">
    <div class="container">
      <div class="top-posts-wrapper">
        <TopPosts posts={topPosts} />
      </div>
    </div>
  </section>
</Layout>
