---
import Pagination from '@/components/Pagination.astro';
import PostPreview from '@/components/PostPreview.astro';
import TopPosts from '@/components/TopPosts.astro';
import Layout from '@/layouts/Layout.astro';
import LearnBanner from '@/components/sections/LearnBanner.astro';
import LearnCalltoAction from '@/components/sections/LearnCalltoAction.astro';

import PostSidebar from '@/components/PostSidebar.astro';

import { getCollection } from 'astro:content';

const posts = await getCollection('learn');

// sort posts by date
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const topPosts = posts.slice(0, 4);
---

<Layout title={'Learning Center'} image={'todo'} description={'todo'}>
  <style lang="scss">
    @use '../../styles/base.scss';

    .learn-wrapper {
      display: grid;
      grid-template-columns: 2fr 1fr;
      width: 100%;
    }

    .side-bar {
      display: flex;
      flex-direction: col;
      position: fixed;
      background: red;
      border: 1px solid blue;
    }

    h1 {
      margin-top: 0;
    }

    .heading {
      @media (min-width: base.$lg) {
        max-width: 50%;
      }
    }
  </style>

  <!-- <PageHeader title={postIndex.data.title} /> -->
  <section>
    <div class="container">
      <div class="heading">
        <p class="sub-heading">Accurate & Honest</p>
        <h1>Transparent Home Buying Education</h1>
        <p>
          Finding high quality home buying information online can be incredibly difficult. We take pride in writing
          accurate articles to set the right expectations.
        </p>
      </div>
    </div>
  </section>
  <TopPosts posts={topPosts} />
  <!-- todo: change from banner to navigation or somethign -->
  <LearnBanner />
  <LearnCalltoAction />
</Layout>
