---
import Pagination from '@/components/Pagination.astro';
import TopPosts from '@/components/TopPosts.astro';
import Layout from '@/layouts/Layout.astro';
import LearnBanner from '@/components/sections/LearnBanner.astro';
import LearnCalltoAction from '@/components/sections/LearnCalltoAction.astro';
import SmallPosts from '@/components/SmallPosts.astro';

// TODO:what is this.
// import PostSidebar from '@/components/PostSidebar.astro';

import { getCollection } from 'astro:content';

const all_posts = await getCollection('learn');

// sort posts by date
all_posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const page_count = Math.ceil(all_posts.length / 6);

const topPosts = all_posts.slice(0, 4);
const first_page_posts = all_posts.slice(4, 10);
---

<Layout title={'Learning Center'} image={'todo'} description={'todo'}>
  <style lang="scss">
    @use '@/styles/base.scss';

    .learn-wrapper {
      display: grid;
      grid-template-columns: 2fr 1fr;
      width: 100%;
    }

    // do we need a sidebar?
    // .side-bar {
    //   display: flex;
    //   flex-direction: col;
    //   position: fixed;
    //   background: red;
    //   border: 1px solid blue;
    // }

    h1 {
      margin-top: 0;
    }

    .heading {
      @media (min-width: base.$lg) {
        max-width: 50%;
      }
    }

    h2 {
      margin-top: var(--space-xl);
    }
  </style>

  <!-- <PageHeader title={postIndex.data.title} /> -->
  <section>
    <div class="container">
      <div class="heading">
        <p class="sub-heading">Accurate & Honest</p>
        <h1>Transparent Home Buying Education</h1>
        <p>
          Finding high quality home buying information online can be incredibly difficult. We take pride in writing
          accurate articles to set the right expectations.
        </p>
      </div>
    </div>
  </section>
  <TopPosts posts={topPosts} />
  <!--  TODO: change name from banner to navigation and mke sure it's a11y -->
  <LearnBanner />
  <div class="container">
    <h2 class="title">More Posts</h2>
  </div>
  <SmallPosts offset={4} posts={first_page_posts} />
  <Pagination page_count={page_count} />
  <LearnCalltoAction />
</Layout>
