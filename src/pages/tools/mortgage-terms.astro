---
/*
 *  a list of all mortgage terms and also doubles as a display for our
 *  terms data base that we'll be using for tool tip pop ups on other pages.
 */

import Layout from '@/layouts/Layout.astro';
import LearnCalltoAction from '@/components/sections/LearnCalltoAction.astro';
import Terms from '@/components/svelte/MortgageTerms.svelte';
---

<Layout title={'Learning Center'} image={'todo'} description={'todo'}>
  <section>
    <div class="container">
      <div class="heading">
        <h1>Mortgage Glossary</h1>
        <p>Search mortgage terms and switch to grug brain if needed!</p>
      </div>
    </div>
  </section>
  <Terms client:load />
  <LearnCalltoAction />
</Layout>

<style lang="scss">
  @use '@/styles/base.scss';

  .grid {
    display: grid;
    grid-template-columns: 1;
    justify-content: center;
  }

  .calc-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: var(--space-md);
    background: var(--platinum-200);
    border-radius: 4px;
    font-size: var(--text-md);

    .calc-icon {
      height: var(--space-xl);
      width: var(--space-xl);
      margin-bottom: var(--space-md);
    }
  }

  .calc-wrapper {
    margin: var(--space-sm) 0;
    order: -1;
  }

  h1 {
    margin-top: 0;
  }

  h2 {
    margin-top: var(--space-xl);
  }

  @media (min-width: base.$lg) {
    .heading {
      max-width: 50%;
    }

    .calc-card {
      max-width: 15rem;
    }

    .calc-wrapper {
      margin: var(--space-xl) 0;
    }
  }
</style>
