const { socialLinks, links, footNote } = footerData;
---

<style>
  footer {
    border-top-width: 1px;
    border-top-style: solid;
    border-color: slategray;

    ul {
      padding-left: 0;
      li {
        list-style: none;
        padding: var(--space-xxs) 0;
        color: var(--grey);
        font-size: var(--text-sm);
        &:hover {
          color: var(--ink);
          text-decoration: underline;
        }
      }
    }
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: var(--space-xl);
    padding: var(--space-xl) 0;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--grey);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    justify-content: start;
    white-space: nowrap;
  }

  .logo {
    margin-bottom: 1rem;

    @media (min-width: 1024px) {
      grid-column: span 1;
    }
  }

  .address {
    margin: var(--space-md) 0;
    font-size: var(--text-sm);
  }

  .address-text {
    display: block;
    color: var(--grey);
  }

  hr {
    margin-top: var(--space-md);
    background: var(--mid-grey);
  }
</style>

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="footer-column logo">
        <div class="logo">
          <Logo />
          <hr />
        </div>
        <div class="contact-info">
          <a href="tel:4806855869">Phone: +1 (480) 685-5869</a>
          <a href="mail:info@kaseyhomeloans.com">Email: info@kaseyhomeloans.com</a>
        </div>

        <div class="address">
          <span class="address-text">7550 E McDonald Dr</span>
          <span class="address-text">Ste E</span>
          <span class="address-text">Scottsdale, AZ 85250</span>
        </div>
      </div>
      {
        links.map(({ title, links }) => (
          <div class="footer-column">
            <div class="title"> {title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul>
                {links.map(({ text, href }) => (
                  <li class="footer-link">
                    <a href={href}>{text}</a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>
  </div>
</footer>
