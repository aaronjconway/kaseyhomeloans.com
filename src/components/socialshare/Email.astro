---
import type ButtonProps from './types';
import { Icon } from 'astro-icon/components';

type Props = ButtonProps;

const { url = Astro.request.url, title, description } = Astro.props;

let URL = `mailto:?subject=${title}&body=${description}%0A${url}`;
---

<a class="social-share-btn" target="_blank" href={URL} rel="noopener noreferrer">
  <Icon class="social-icon" name="simple-icons:gmail" style="color:indianred;background:var(--platinum-200)" />
</a>
