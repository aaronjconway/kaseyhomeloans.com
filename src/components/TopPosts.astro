---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';

const { posts } = Astro.props;

const firstPost = posts.shift();

console.log(posts);

const images = import.meta.glob<{ default: ImageMetadata }>('../assets/images/*');
---

<style>
  .wrapper {
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
  }

  .first-post-wrapper {
    height: 75%;
  }

  .image-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 4px;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  .small-image-wrapper {
    display: flex;
    border:1px solid;
    border-radius: 4px;
    overflow: hidden;
    width: 100px;
    height: 100px;
  }

  .image {
    width:100%;
    height:100%;
  }

  .title {
    font-size: var(--text-md);
    font-weight: bold;
    margin-bottom: var(--space-xs);
  }

  .post-title {
    font-size: var(--text);
    font-weight: bold;
    margin: var(--space-xs) 0;
  }
</style>

<div class="wrapper">
  <div class="first-post-wrapper">
    <div class="title">Most Recent Posts</div>
    <div class="image-wrapper">
      <Image class="image" src={images[`../assets/images/${firstPost.data.image}`]()} alt={''} />
    </div>
    <div class="post-title">{firstPost.data.title}</div>
    <div class="post-author">
      <FormattedDate date={firstPost.data.date} />
       â€¢ {firstPost.data.author}
    </div>
  </div>
</div>
<div class="nextPosts">
{posts.map((post)=>

  <div class = 'small-post'>
    <div class="small-image-wrapper">
      <Image height={300} class="image" src={images[`../assets/images/${post.data.image}`]()} alt={''} />
    </div>
  </div>

)}
</div>
